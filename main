    <script>
        // Create falling hearts animation
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.innerHTML = 'üíñ';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 3 + 2) + 's';
            heart.style.animationDelay = Math.random() * 2 + 's';
            
            document.getElementById('hearts').appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 6000);
        }

        // Create hearts periodically
        setInterval(createHeart, 800);

        // Surprise button function
        function showSurprise() {
            const surprises = [
                "‡∏õ‡∏¥‡πÇ‡∏¢‡∏∞‡∏ô‡πà‡∏≤‡∏£‡∏±‡∏Å‡∏°‡∏≤‡∏Å‡πÜ ‡πÄ‡∏•‡∏¢! ü•∞üíï",
                "‡πÄ‡∏≠‡πÄ‡∏ô‡∏•‡∏£‡∏±‡∏Å‡∏õ‡∏¥‡πÇ‡∏¢‡∏∞‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î‡πÉ‡∏ô‡πÇ‡∏•‡∏Å! üíñ‚ú®",
                "‡∏Ç‡∏≠‡πÉ‡∏´‡πâ‡∏õ‡∏¥‡πÇ‡∏¢‡∏∞‡∏°‡∏µ‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏∏‡∏Ç‡∏ï‡∏•‡∏≠‡∏î‡πÑ‡∏õ! üåüüí´",
                "‡∏õ‡∏¥‡πÇ‡∏¢‡∏∞‡∏Ñ‡∏∑‡∏≠‡πÅ‡∏™‡∏á‡∏™‡∏ß‡πà‡∏≤‡∏á‡πÉ‡∏ô‡∏ä‡∏µ‡∏ß‡∏¥‡∏ï‡πÄ‡∏≠‡πÄ‡∏ô‡∏•! ‚òÄÔ∏èüíñ",
                "Happy Halloween ‡∏õ‡∏¥‡πÇ‡∏¢‡∏∞‡∏ó‡∏µ‡πà‡∏£‡∏±‡∏Å! üéÉüëªüíï"
            ];
            
            const randomSurprise = surprises[Math.floor(Math.random() * surprises.length)];
            
            // Create surprise popup
            const popup = document.createElement('div');
            popup.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: linear-gradient(45deg, #FFE5F1, #F0E5FF);
                padding: 30px;
                border-radius: 20px;
                border: 3px solid #FF69B4;
                font-size: 1.2rem;
                color: #FF1493;
                text-align: center;
                z-index: 1000;
                box-shadow: 0 20px 40px rgba(255, 105, 180, 0.3);
                animation: popIn 0.5s ease-out;
            `;
            
            popup.innerHTML = `
                <div style="margin-bottom: 20px;">${randomSurprise}</div>
                <button onclick="this.parentElement.remove()" style="
                    background: #FF69B4;
                    border: none;
                    border-radius: 15px;
                    padding: 10px 20px;
                    color: white;
                    cursor: pointer;
                    font-weight: bold;
                ">‡∏õ‡∏¥‡∏î ‚ú®</button>
            `;
            
            // Add animation keyframes
            const style = document.createElement('style');
            style.textContent = `
                @keyframes popIn {
                    0% { transform: translate(-50%, -50%) scale(0); opacity: 0; }
                    100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
                }
            `;
            document.head.appendChild(style);
            
            document.body.appendChild(popup);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (popup.parentElement) {
                    popup.remove();
                }
            }, 5000);
        }

        // Add some sparkle effects on load
        window.addEventListener('load', () => {
            for (let i = 0; i < 5; i++) {
                setTimeout(createHeart, i * 200);
            }
        });
